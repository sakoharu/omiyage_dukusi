<!DOCTYPE html>
<html>
  <head>
    <title>OmiyageDukusi</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <% if admin_signed_in? %>
        <li>
          <%= link_to "ログアウト", destroy_customer_session_path,method: :delete %>
        </li>
      <% elsif customer_signed_in? %>
      
          <%= link_to "おみやげ検索", search_area_souvenirs_path %>
          
          <%= link_to "おみやげ一覧", souvenirs_path %>

          <%= link_to "マイページ", customer_path(current_customer.id)%>

          <%= link_to "お気に入り", favorites_path %>
          
          <%= link_to "おすすめする", new_souvenir_path %>
          
          <%= link_to "ログアウト", destroy_customer_session_path,method: :delete %>
       <% else  %>
          
          <%= link_to "Top", root_path %>
          
          <%= link_to "新規登録", new_customer_registration_path %>
          
　　　　　<%= link_to "ログイン", new_admin_session_path %>
        
      <% end %>
    </header>
    <%= yield %>
  </body>
</html>
