<h1>編集ページ</h1>

<%= form_with model: @customer do |f| %>
 <div>
  <label for="inputName">Name</label>
   <%= f.text_field :name %>
 </div>
 <div>
  <label for="email">email</label>
   <%= f.text_field :email %>
 </div>

 <%= f.submit '変更' %>

<% end %>

