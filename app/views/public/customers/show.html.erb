<h1>マイページ</h1>

<div>

 <p> 名前<%= @customer.name %></p></br>
 <p>メールアドレス<%= @customer.email %></p>
</div>

<p><%= link_to "編集",edit_customer_path(current_customer.id) %></p>

<% @souvenirs.each do |souvenir| %>
<%= link_to souvenir_path(souvenir.id) do %>
 <tr>
    <tb><%= image_tag souvenir.image, size: "200x200" %></tb>
 </tr>
<% end %>
 <tr>
   <%= souvenir.item_name %>
 </tr>
 <tr>
   ¥<%= souvenir.price %>
 </tr>
 <tr>
   <%= souvenir.body %>
 </tr>

 <p><%= link_to "編集",edit_souvenir_path(souvenir.id) %></p>
 <p><%= link_to "削除",souvenir_path(souvenir.id), method: :delete, "data-confirm" => "本当に削除しますか？" %></p>

<% end %>