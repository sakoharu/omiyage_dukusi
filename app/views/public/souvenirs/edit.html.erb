

<h4>投稿商品編集</h4>
<%= form_with model: @souvenir do |f| %>

 <h4>商品名</h4>
 <%= f.text_field :item_name %>

 <h4>値段（だいたい）</h4>
 <%= f.text_field :price %>

 <h4>商品写真</h4>
 <%= f.file_field :image, accept: "image/*" %>

 <h4>商品説明</h4>
 <%= f.text_area :body %>

 <h4>ジャンル</h4>
 <%= f.collection_radio_buttons(:genre_id, Genre.all, :id, :genre_name) %>

 <%= f.submit '変更' %>
<% end %>